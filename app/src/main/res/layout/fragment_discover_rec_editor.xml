<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp">
    <include
        android:id="@+id/layout_lv_title"
        layout="@layout/include_lv_title"/>
    <LinearLayout
        android:id="@+id/rec_item_content_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/layout_lv_title"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/rec_item_content_iv"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@mipmap/image_default_200"
            />
            <TextView
                android:id="@+id/rec_item_content_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="内容"/>
            <TextView
                android:id="@+id/rec_item_tag_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:drawableLeft="@mipmap/myspin_nav_icon_album_nor"
                android:text="标签"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/rec_item_content_iv2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@mipmap/image_default_200"
            />
            <TextView
                android:id="@+id/rec_item_content_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="内容"/>
            <TextView
                android:id="@+id/rec_item_tag_tv2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:drawableLeft="@mipmap/myspin_nav_icon_album_nor"
                android:text="标签"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/rec_item_content_iv3"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:scaleType="fitXY"
                android:src="@mipmap/image_default_200"
            />
            <TextView
                android:id="@+id/rec_item_content_tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="2"
                android:text="内容"/>
            <TextView
                android:id="@+id/rec_item_tag_tv3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:drawableLeft="@mipmap/myspin_nav_icon_album_nor"
                android:text="标签"/>
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>