<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:tools="http://schemas.android.com/tools"
       xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal"
              android:layout_marginTop="15dp"
       tools:showIn="@layout/item_discover_rec_editor">

    <ImageView
        android:id="@+id/rec_item_title_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:src="@mipmap/title_tag"
    />
    <TextView
        android:id="@+id/rec_item_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:text="标题"
    />
    <TextView
        android:id="@+id/rec_item_more_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:gravity="right"
        android:drawableRight="@drawable/ic_more_selector"
        android:text="更多"
        android:textColor="@android:color/darker_gray"
    />
</LinearLayout>