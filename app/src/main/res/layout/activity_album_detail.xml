<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_album_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mobi.xiaowu.himalaya.ui.activity.Recommend.AlbumDetailActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="match_parent"
                      android:gravity="center_vertical"
                      android:orientation="horizontal">
            <ImageView
                android:id="@+id/detail_back_iv"
                android:layout_width="60dp"
                android:layout_height="match_parent"
                android:onClick="click"
                android:paddingRight="30dp"
                android:scaleType="center"
                android:src="@mipmap/ic_web_back"/>
            <TextView
                android:id="@+id/detail_title_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="网络失败"
                android:textSize="22sp"/>
            <ImageView
                android:id="@+id/detail_share_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="click"
                android:paddingRight="20dp"
                android:src="@mipmap/ic_share_pressed"/>
            <ImageView
                android:id="@+id/detail_more_iv"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/play_tool_bar_more_selector"
                android:onClick="click"
            />
        </LinearLayout>
    </android.support.v7.widget.Toolbar>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >
        <ScrollView
            android:id="@+id/layout_have_net"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="25dp">
                <ImageView
                    android:id="@+id/detail_iv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:src="@mipmap/myspin_image_default_album_s"/>
                <TextView
                    android:id="@+id/detail_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/detail_iv"
                    android:text="标题"
                    android:textSize="22sp"/>
                <TextView
                    android:id="@+id/detail_tv2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_tv"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/detail_iv"
                    android:text="主播:"/>
                <TextView
                    android:id="@+id/detail_tv3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_tv2"
                    android:layout_margin="3dp"
                    android:layout_toRightOf="@id/detail_iv"
                    android:text="播放:"/>
                <TextView
                    android:id="@+id/detail_tv4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_tv3"
                    android:layout_margin="5dp"
                    android:layout_toRightOf="@id/detail_iv"
                    android:text="状态:"/>
                <LinearLayout
                    android:id="@+id/layout_ll_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_tv4"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/detail_subscribe"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:background="#62ce41"
                        android:gravity="center"
                        android:text="订阅专辑"
                        android:textColor="@android:color/white"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="20dp"
                        android:layout_weight="1"
                        android:background="#62ce41"
                        android:gravity="center"
                        android:text="批量下载"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
                <android.support.design.widget.TabLayout
                    android:id="@+id/detail_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/layout_ll_btn"
                    android:layout_marginTop="20dp"/>
                <android.support.v4.view.ViewPager
                    android:id="@+id/detail_vp"
                    android:layout_width="match_parent"
                    android:layout_height="180dp"
                    android:layout_below="@id/detail_tab"/>
                <TextView
                    android:id="@+id/detail_more_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/detail_vp"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="查看更多内容"/>

            </RelativeLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/layout_no_net"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#d9d9d6">
            <ImageView
                android:id="@+id/no_net_iv"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerInParent="true"
                android:src="@mipmap/no_net"/>
            <TextView
                android:id="@+id/no_net_tv"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_below="@id/no_net_iv"
                android:layout_centerInParent="true"
                android:background="@android:color/white"
                android:gravity="center"
                android:onClick="click"
                android:text="@string/load_again"/>
        </RelativeLayout>
    </FrameLayout>

</LinearLayout>
