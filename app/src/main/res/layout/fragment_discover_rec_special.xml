<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
              android:orientation="vertical"
                android:layout_margin="10dp">
    <include
        android:id="@+id/layout_lv_title"
        layout="@layout/include_lv_title"/>
    <RelativeLayout
        android:id="@+id/rec_item_content_rl"
        android:layout_width="match_parent"
                  android:layout_height="wrap_content"
    android:layout_margin="10dp">
        <ImageView
            android:id="@+id/rec_item_content_iv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:layout_marginRight="15dp"
            android:src="@mipmap/image_default"/>
        <ImageView
            android:id="@+id/rec_item_content_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_more_selector"/>
        <TextView
            android:id="@+id/rec_item_content_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rec_item_content_iv"
            android:textSize="20sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="标题"/>
        <TextView
            android:id="@+id/rec_item_content_tv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rec_item_content_tv"
            android:layout_toRightOf="@id/rec_item_content_iv"
            android:textSize="17sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="内容"/>
        <TextView
            android:id="@+id/rec_item_content_tv3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/myspin_nav_icon_album_nor"
            android:layout_toRightOf="@id/rec_item_content_iv"
            android:layout_below="@id/rec_item_content_tv2"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="标记"/>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/rec_item_content_rl2"
        android:layout_width="match_parent"
        android:layout_margin="10dp"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/rec_item_content_iv2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:layout_marginRight="15dp"
            android:src="@mipmap/image_default"/>
        <ImageView
            android:id="@+id/rec_item_content_more2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:background="@drawable/ic_more_selector"/>
        <TextView
            android:id="@+id/rec_item_content_tv4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/rec_item_content_iv2"
            android:textSize="17sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="标题"/>
        <TextView
            android:id="@+id/rec_item_content_tv5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/rec_item_content_tv4"
            android:layout_toRightOf="@id/rec_item_content_iv2"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="内容"/>
        <TextView
            android:id="@+id/rec_item_content_tv6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@mipmap/myspin_nav_icon_album_nor"
            android:layout_below="@id/rec_item_content_tv5"
            android:layout_toRightOf="@id/rec_item_content_iv2"
            android:textSize="14sp"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="标记"/>
    </RelativeLayout>
</LinearLayout>